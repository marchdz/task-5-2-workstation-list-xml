<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/imgOffice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/blue"
        app:titleCentered="true"
        app:titleTextColor="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:scaleX="1.15"
            android:scaleY="1.15"
            android:src="@drawable/ic_vass" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/user_avatar_end_margin"
            android:importantForAccessibility="no"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/img_avatar_round" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/imgOffice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/img_vas_office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_60_opacity"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/imgOffice"
        app:layout_constraintTop_toTopOf="@id/imgOffice" />

    <ImageView
        android:id="@+id/imgCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toTopOf="@id/tvImgOffice"
        app:layout_constraintEnd_toEndOf="@id/imgOffice"
        app:layout_constraintStart_toStartOf="@id/imgOffice"
        app:layout_constraintTop_toTopOf="@id/imgOffice"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@id/imgCircle"
        app:layout_constraintEnd_toEndOf="@id/imgOffice"
        app:layout_constraintStart_toStartOf="@id/imgOffice"
        app:layout_constraintTop_toTopOf="@id/imgCircle"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvImgOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_min"
        android:text="@string/main_img_office_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgOffice"
        app:layout_constraintEnd_toEndOf="@id/imgOffice"
        app:layout_constraintStart_toStartOf="@id/imgOffice"
        app:layout_constraintTop_toBottomOf="@id/imgCircle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWorkStations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_padding_default"
        android:layout_marginTop="@dimen/common_padding_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgOffice"
        tools:listitem="@layout/item_workstation" />

</androidx.constraintlayout.widget.ConstraintLayout>